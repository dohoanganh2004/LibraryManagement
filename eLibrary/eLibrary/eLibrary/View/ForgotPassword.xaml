<Window x:Class="eLibrary.View.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quên mật khẩu" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="AliceBlue">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" Width="480" Height="264">
            <StackPanel>
                <TextBlock Text="Quên mật khẩu" FontSize="20" FontWeight="Bold" Foreground="DarkBlue" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Email:"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0 5" TextChanged="txtEmail_TextChanged"/>

               

                <Button Content="Xác nhận" Width="100" Height="35" Margin="0 15 0 0" HorizontalAlignment="Center" Click="BtnXacNhan_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
